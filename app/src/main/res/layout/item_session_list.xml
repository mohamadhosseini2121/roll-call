<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_padding"
    android:layout_marginRight="@dimen/layout_padding"
    android:foreground="?attr/selectableItemBackground"
    android:layoutDirection="rtl"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/layout_padding"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tv_session_number_session_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_view"
            android:textSize="@dimen/large_font_size"
            android:textStyle="bold"
            tools:text="جلسه اول" />

        <TextView
            android:id="@+id/tv_date_session_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_session_number_session_item"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_view"
            android:layout_marginTop="@dimen/margin_view_x2"
            android:textSize="@dimen/normal_font_size"
            tools:text="98/12/10" />

        <!--<TextView
            android:id="@+id/tv_time_session_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/tv_date_session_item"
            android:layout_marginEnd="@dimen/margin_view"
            android:textSize="@dimen/normal_font_size"
            tools:text="ساعت: 12:23" />-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>