<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/nv_header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/navigation_view_image" />

    <ImageView
        android:id="@+id/nv_header_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignRight="@id/nv_header_image"
        android:layout_alignBottom="@id/nv_header_image"
        android:layout_margin="@dimen/margin_view"
        android:src="@drawable/navigation_view_avatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="گراز بزرگ"
        android:textSize="@dimen/large_font_size"
        android:textColor="@color/title_texts_color"
        android:layout_toLeftOf="@id/nv_header_avatar"
        android:layout_alignBottom="@id/nv_header_avatar"/>


</RelativeLayout>